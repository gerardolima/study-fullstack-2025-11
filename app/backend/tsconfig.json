{
  // Visit https://aka.ms/tsconfig to read more about this file
  // also refer to "https://github.com/tsconfig/bases/blob/main/bases/node20.json",

  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src",
  ],
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./out",
    "noEmit": true,

    "incremental": true,
    "target": "es2023",
    "lib": ["es2023"],
    "module": "node20",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  }
}
